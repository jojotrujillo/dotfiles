#!/usr/bin/env bash

paru -S breezex-cursor-theme btop dolphin fastfetch ffmpeg4.4 hyprsunset hyprsysteminfo kvantum mako noto-fonts noto-fonts-cjk \
	noto-fonts-emoji otf-font-awesome papirus-icon-theme pavucontrol power-profiles-daemon python-gobject \
	qt6ct-kde spotify ttf-font-awesome ttf-jetbrains-mono-nerd ttf-nerd-fonts-symbols waybar zenity

# For waybar to work
if id -nG $USER | grep -qw input; then
    echo "User '$USER' is already in the 'input' group."
else
    echo "Adding '$USER' to 'input' group."

    sudo usermod -aG input $USER
fi
